<%- include("partials/header.ejs") %>
<hr /><hr /><hr />

<div class="container">
<% if (!name2) { %>
    <h1>
        Hello <%= name1 %>, How are you doing today?
    </h1>
    
<% } else { %>
    <hr />
    <h1>
        Hello <%= name2 %>, How are you doing today?
    </h1>
    <hr />
<% } %>
</div>
<hr /><hr /><hr />
<form action="/" method="POST">
    <div class="form-group">
        <label for="inputString">Enter our name please:</label>
        <input type="text" id="inputString" name="inputString"  />
    </div>

    <br /><br /><br />

    <h2>Choose the 4 colors for the background gradient</h2>
    <br />
    <div>
        <label for="color1">Select your first color:</label>
        <input type="color" id="color1" name="color1" value="#ee7752" style="margin: 20px;" />
        <label for="color2">Select your second color:</label>
        <input type="color" id="color2" name="color2" value="#e73c7e" style="margin: 20px;" />
    </div>

    <br /><hr />

    <div>
        <label for="color3">Select your third color:</label>
        <input type="color" id="color3" name="color3" value="#23a6d5" style="margin: 20px;" />
        <label for="color4">Select your fourth color:</label>
        <input type="color" id="color4" name="color4" value="#23d5ab" style="margin: 20px;" />
    </div>

    <br /><hr />
    <%# You have to click on the button submit to see the changes on the background color and the greeting phrase %>
    <button type="submit">Submit</button>
</form>



